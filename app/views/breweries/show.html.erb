<p>
  <h2><%= @brewery.name %>
    <% if not @brewery.active  %>
        <span class="label label-info">retired</span>
    <% end %></h2>
  <i>Established at <%= @brewery.year %> </i>
</p>
<p>
  Number of beers <%= @brewery.beers.count %>
</p>
<p>
  <% @brewery.beers.each do |beer| %>
     <%= link_to beer.name, beer %>
  <% end %>
</p>
<p>
  <% if @brewery.ratings.empty? %>
      Brewery has not yet been rated!
  <% else %>
   Has <%=pluralize(@brewery.ratings.count,'rating','ratings')%>, average <%= @brewery.rating_average.round 1 %>

  <% end %>
</p>
<% if current_user %>
    <%= link_to 'Edit', edit_brewery_path(@brewery), class:"btn btn-primary"  %>
    <%= link_to 'Destroy', @brewery, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  %>
<% end %>

