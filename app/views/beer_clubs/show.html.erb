<p id="notice"><%= notice %></p>

<p>
<h2><%= @beer_club.name %> <%= @beer_club.city %></h2>
<i>Founded <%= @beer_club.founded %> </i>
</p>
<p>
<% if current_user %>
  <% unless @beer_club.users.include? current_user%>
      <%= form_for(@membership) do |f| %>
          <%= f.hidden_field :beer_club_id %>
          <%= f.submit value:"join the club" %>
      <% end %>
    <%end%>
  <%end%>
  <h3>Members</h3>
    <ul>
  <% @beer_club.users.each do |user| %>
      <li><%= link_to user.username, user %></li>
  <% end %>
      </ul>
</p>

<%= link_to "Edit",edit_beer_club_path %>
<%= link_to 'Destroy the club', @beer_club, method: :delete, data: { confirm: 'Are you sure?' } %>


