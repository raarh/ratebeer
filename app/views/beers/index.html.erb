<h1>Listing beers</h1>
<nav>
    <%= link_to 'List of breweries', breweries_path %>
    <%= link_to('New Beer', new_beer_path) if current_user %>
</nav>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= beer.style %></td>
        <td><%= Brewery.find_by(id:beer.brewery_id).name %></td>
        <td><%= link_to('Edit', edit_beer_path(beer))  if current_user %></td>
        <td><% link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
