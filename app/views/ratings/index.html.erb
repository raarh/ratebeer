<h1>Ratings</h1>
<p>Number of ratings <%=@ratings.count %> <br />
</p>
<h3>Top beers</h3>
<%= render 'top_list', toplist: @top_beers%>
<h3>Top breweries</h3>
<%= render 'top_list', toplist: @top_breweries%>
<h3>Top raters</h3>
<table class="table table-hover">
  <thead>
  <tr>
    <th>name</th>
    <th>favorite beer</th>
    <th>prefered style</th>
    <th>favorite brewery</th>
    <th>ratings</th>
  </tr>
  </thead>
  <tbody>
  <tr>
  <% @top_raters.each do |user,count| %>
     <td><%= link_to user.username, user%></td>
     <td><%= link_to user.favorite_beer, user.favorite_beer%></td>
     <td><%= link_to user.favorite_style.style, user.favorite_style%></td>
     <td><%= link_to user.favorite_brewery.name, user.favorite_brewery%></td>
     <td><%= count %></td>
  </tr>
  <% end %>
    </tbody>
</table>
<h3>Recent ratings</h3>
<table class="table table-hover">
  <thead>
  <tr>
    <th><%= link_to 'Name', breweries_path(order:"name") %></th>
    <th><%= link_to 'Score', breweries_path(order:"year") %></th>
    <th><%= link_to 'Rater', breweries_path(order:"rater") %></th>
  </tr>
  </thead>

  <tbody>
  <% @recent.each do |rating| %>
      <tr>
        <td><%= link_to rating.beer.name, rating.beer %></td>
        <td><%= rating.score %></td>
        <td><%= rating.user.username %></td>

      </tr>
  <% end %>
  </tbody>
</table>

